 @import "/static/css/weui.wxss"; 


view#desc {
  text-indent: 2em;
}

.page{
  background-color: #f8f8f8;
  height: 100vh;
  padding-left: 1rem;
  padding-right: 1rem;
  padding-top: 1rem;
  border-top: none;
}

view#comments{
  margin-bottom: 5em;
}

view.comment-bar{
    position: fixed;  
    z-index: 500;
    bottom: 5px;
     background-color: #F6F6F6; 
    width: 100vw;
    left: 0;
    padding: 10px 0;
    border-radius: 5px;
}

.comment-bar input{
  border-radius: 5px;
  height: 2em;
  margin-left: 1em;
}

.comment-bar button{
  border: none;
  border-radius: none;
  position: static;
  height: 2em;
  line-height: 2em;
  background-color: white;
}